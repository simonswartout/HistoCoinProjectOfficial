{
  "name": "histocoin-node",
  "version": "0.1.0",
  "description": "Headless CLI node that scrapes CC0 historical artifacts and reports them to the HistoCoin master server.",
  "private": true,
  "type": "module",
  "bin": {
    "histocoin-node": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts run",
    "start": "node dist/index.js run"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.17"
  }
}
